@model MiniInternetMagazin.Models.GroceryStoreViewModels.User
@{
    ViewData["Title"] = "Index";
}
<h2 class="text-info">"1234" Логин и пароль наш стандартный админ!</h2>
<form method="get" action="~/Users/FindUser">
    <div class="row">
        <div class="col-md-6">
            <label for="Login">Ваш рол</label><br />
            <select name="Roll" class="form-control">
                <option value="Customer">Клиент</option>
                <option value="Admin">Админ</option>
            </select>
        </div>
    </div>
    <div class="row">
        <div class="col-md-6">
            <div class="input-group">
                <label for="Login">Логин</label><br />
                <input asp-for="Login" type="number" class="form-control" placeholder="Введите свой логин" />
            </div>
        </div>
    </div>
    <div class="row">
        <div class="col-md-6">
            <div class="input-group">
                <label for="Password">Пароль</label><br />
                <input asp-for="Password" type="text" class="form-control" placeholder="Введите свой пароль" />
            </div>
        </div>
    </div>
    <div class="row">
        <div class="col-md-6">
            <div class="input-group">
                <input type="submit" class="btn btn-primary" value="Перейти" />
                <a class="btn btn-default" asp-controller="Users" asp-action="Registration">Быстрое регистрация</a>
            </div>
        </div>
    </div>
</form>