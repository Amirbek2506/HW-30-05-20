@model List<MiniInternetMagazin.Models.GroceryStoreViewModels.Basket>
<nav class="navbar navbar-inverse navbar-fixed-top">
    <div class="container">
        <div class="navbar-header">
            <a asp-area="" asp-controller="Products" asp-action="SelectProducts" class="navbar-brand">Продукты</a>
            <a asp-area="" asp-controller="Categories" asp-action="SelectCategory" class="navbar-brand">Категории</a>
            <a asp-area="" asp-controller="Products" asp-action="Basket" class="navbar-brand">Корзина</a>
        </div>
    </div>
</nav>
<table class="table">
    <thead>
        <tr>
            <td>Имя продукта</td>
            <td>Адрес доставка</td>
            <td>Номер телефон</td>
            <td>Количество</td>
            <td></td>
        </tr>
    </thead>
    <tbody>
        @foreach (var x in Model)
        {
            <tr>
                <td>@x.Product.ProductName</td>
                <td>@x.AdressDelivery</td>
                <td>@x.NumbersPhone</td>
                <td>@x.Quantity</td>
                <td><a class="nav-link dark" asp-action="DeleteProductBasket" asp-controller="Products" asp-route-id="@x.Id">Удалить</a></td>
            </tr>
        }
    </tbody>
</table>