<html>
<head>
    <meta name="viewport" content="width=device-width" />
</head>
<body>
    <nav class="navbar navbar-inverse navbar-fixed-top">
        <div class="container">
            <div class="navbar-header">
                <a asp-area="" asp-controller="Products" asp-action="SelectProductsCustomer" class="navbar-brand">Продукты</a>
                <a asp-area="" asp-controller="Users" asp-action="Index" class="navbar-brand">Выход</a>
            </div>
        </div>
    </nav>
    <form method="get" action="~/Products/SelectProductsCustomer">
        <select name="category" class="form-control-static">
            <option>
                Все
            </option>
            @foreach (var x in ViewBag.Categories)
            {
                <option>@x.CategoryName</option>
            }
        </select>
        <input type="submit" class="btn-success" value="Перейти">
    </form>

    <table class="table table-bordered table-hover table-striped">
        <thead>
            <tr>
                <th scope="col">Id</th>
                <th scope="col">Имя продукт</th>
                <th scope="col">Цена продукт</th>
                <th scope="col">Категория продукт</th>
                <th scope="col">Добавить в корзину</th>
            </tr>
        </thead>
        <tbody>
            @if (Model.Count > 0)
            {
                foreach (var product in Model)
                {

                    <tr>

                        <td>@product.ProductId</td>
                        <td>@product.ProductName</td>
                        <td>@product.Price</td>
                        <td>@product.Category</td>
                        <td><a class="nav-link dark" asp-action="AddToBasket" asp-controller="Products" asp-route-id="@product.ProductId">Добавить</a></td>
                    </tr>

                }
            }
            else
            {
                <tr>
                    <td class="text-center" colspan="5">Пустой</td>
                </tr>
            }
        </tbody>
    </table>
</body>
</html>